@model List<Hastane_Proj.Models.PatientDoctor>

@{
    ViewData["Title"] = "TC ile Sorgulama";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" action="/Home/TCSearch" class="card p-4 shadow-sm">
                <div class="mb-3">
                    <label for="tc" class="form-label fw-bold">TC Kimlik No:</label>
                    <input type="text" id="tc" name="tc" class="form-control" required maxlength="11" placeholder="TC Kimlik No" />
                </div>
                <button type="submit" class="btn btn-primary w-100">Sorgula</button>
            </form>
        </div>
    </div>

    @if (Model != null)
    {
            <div class="mt-4">
                <h3 class="text-center">Hasta Kayıtları</h3>
                <table class="table table-striped table-bordered mt-3">
                    <thead class="table-dark">
                        <tr>
                            <th>Hasta Adı</th>
                            <th>Doktor Adı</th>
                            <th>Departman</th>
                            <th>Kayıt Tarihi</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var kayit in Model)
                    {
                                <tr>
                                    <td>@kayit.Patient.FirstName @kayit.Patient.LastName</td>
                                    <td>@kayit.Doctor.FirstName @kayit.Doctor.LastName</td>
                                    <td>@kayit.Doctor.Deparment</td>
                                    <td>@kayit.RecordDate.ToString("dd/MM/yyyy")</td>
                                </tr>
                    }
                    </tbody>
                </table>
            </div>
    }
    else
    {
            <p class="text-center text-danger mt-3 fw-bold">Bu TC Kimlik numarasına ait bir hasta bulunamadı.</p>
    }
</div>
