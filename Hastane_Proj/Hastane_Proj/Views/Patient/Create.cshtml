@model Hastane_Proj.Models.Patient

@{
    ViewData["Title"] = "Yeni Hasta Ekle";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h2 class="text-center text-primary mb-4">
                        <i class="fas fa-user-injured"></i> Yeni Hasta Ekle
                    </h2>

                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label class="form-label">TC Kimlik No</label>
                            <input type="text" class="form-control" asp-for="TcNo" required maxlength="11">
                            <span class="text-danger">@Html.ValidationMessageFor(m => m.TcNo)</span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Hasta Adı</label>
                            <input type="text" class="form-control" asp-for="FirstName" required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Hasta Soyadı</label>
                            <input type="text" class="form-control" asp-for="LastName" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Telefon No</label>
                            <input type="text" class="form-control" asp-for="Phone">
                        </div>

                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-save"></i> Kaydet
                        </button>
                    </form>

                    <a href="/Patient/Index" class="btn btn-secondary w-100 mt-3">
                        <i class="fas fa-arrow-left"></i> Geri Dön
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
